<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".ui.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00796B"
        android:padding="20dp"
        android:text="Student Learning Experience"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="29dp"
        android:padding="10dp"
        android:text="Select the user to login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginText"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/login_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/loginText"
            android:layout_alignRight="@+id/loginText"
            android:layout_below="@+id/loginText"
            android:layout_marginTop="30dp"
            android:background="#FF266059"
            android:textColor="#ffffff" />

    </LinearLayout>


    <EditText
        android:id="@+id/email_address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:hint="Enter the User Id"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#FFA19E9E" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email_address"
        android:layout_alignStart="@+id/email_address"
        android:layout_below="@+id/email_address"
        android:layout_marginTop="23dp"
        android:hint="Enter the password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#FFA19E9E" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#00796B"
        android:padding="10dp"
        android:text="Login"
        android:textColor="#FFFFFF" />


</RelativeLayout>

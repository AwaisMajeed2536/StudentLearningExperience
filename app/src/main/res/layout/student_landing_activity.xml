<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/user_name_display"
        android:text="User Name Here"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_name_display"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/survey_one"
            android:text="Survey One"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/survey_one_status"
            android:text="open"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_one"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/survey_two"
            android:text="Survey One"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/survey_two_status"
            android:text="open"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_two"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/survey_three"
            android:text="Survey One"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/survey_three_status"
            android:text="open"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_three"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/survey_four"
            android:text="Survey One"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/survey_four_status"
            android:text="open"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_four"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/survey_five"
            android:text="Survey One"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/survey_five_status"
            android:text="open"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</RelativeLayout>